<script>
  // Script editávial => CLM <=
  function setConsumerId(id) {
    idUser = id;
    if (id) {
      mixpanel.identify(id);
      mixpanel.track("Webview Opened", {
        //Insira o nome da mensagem edite aqui
        message: "20250127-id-32367-pf-osp-acp-sic-ads-aqu-adscap-sdc-pix_adsbu_bacanaplay_con1",
      });
    }
  }

  var linksCtas = [
      { cta: 0, categoria: "Banana Play - A" },
    ];

  window.addEventListener("beforeunload", function (event) {
    mixpanel.identify(idUser);
    mixpanel.track("Webview Closed", {
      //Insira o nome da mensagem edite aqui
      message: "20250127-id-32367-pf-osp-acp-sic-ads-aqu-adscap-sdc-pix_adsbu_bacanaplay_con1",
      timeOnPageCounter: timeOnPageCounter,
    });
  });

  function multipleCTAs(elem) {
    var ctaSelected =
      linksCtas[elem.getAttribute("data-selected")].categoria;

    mixpanel.track("Webview Link CTA Clicked", {
      //Insira o nome da mensagem edite aqui
      message: "20250127-id-32367-pf-osp-acp-sic-ads-aqu-adscap-sdc-pix_adsbu_bacanaplay_con1",
      referrer: document.referrer,
      categoria: ctaSelected,
    });
  }
</script>
