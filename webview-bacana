      <script>
        $(".slick-slider").slick({
          arrows: false,
          dots: true,
          infinite: false,
          centerMode: true,
          slidesToShow: 1,
          centerPadding: "12%",
          lazyLoad: "ondemand",
        });
        const dots = document.querySelectorAll(".slick-sr-only");
        const selector = document.querySelectorAll(".slick-item");
        for (var i = 0; i < selector.length; i++) {
          dots[i].innerText = selector[i].children[0].alt;
        }

        // Captura elementos CTA para uso do mixpanel
        var ctas = document.querySelectorAll(".cta");
        for (var cta of ctas) {
          cta.addEventListener("click", function (e) {
            //     e.preventDefault();
            multipleCTAs(this);
          });
        }

        // 2. This code loads the IFrame Player API code asynchronously.
        var tag = document.createElement("script");

        tag.src = "https://www.youtube.com/iframe_api";
        var firstScriptTag = document.getElementsByTagName("script")[0];
        firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

        // 3. This function creates an <iframe> (and YouTube player)
        //    after the API code downloads.
        var player;
        function onYouTubeIframeAPIReady() {
          player = new YT.Player("player", {
            width: "100%",
            videoId: "hVIONFQi1Ko",
            playerVars: { autoplay: 1, playsinline: 1 },
            events: {
              onReady: onPlayerReady,
            },
          });
        }

        // 4. The API will call this function when the video player is ready.
        function onPlayerReady(event) {
          //  event.target.mute();
          event.target.playVideo();
        }
      </script>
